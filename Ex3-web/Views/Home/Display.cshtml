@{
    
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <meta charset="utf-8" />
    <title>hi</title>
    <style>

        body {
            overflow: hidden;
            margin: 0;
            padding: 0;
        }

        #canvas {
            width: 100%;
            height: 100%;
            border: 1px solid red;
            
        }

        * {
            padding: 0;
            margin: 0;
        }

        .fit { /* set relative picture size */
            max-width: 100%;
            max-height: 100%;
        }

        .center {
            display: block;
            margin: auto;
        }

        .map {
            position: relative;
            top: 0;
            left: 0;
        }

        .plane {
            position: absolute;
            top: 20%;
            left: 10%;
        }
    </style>
</head>
<body background="~/export-map-share.png" class="center fit map" style="background-size:100% 100%">
    <canvas id="canvas"></canvas>
    <script>
        var c = document.getElementById("canvas");
        var ctx = c.getContext("2d");
        ctx.canvas.width = window.innerWidth;
        ctx.canvas.height = window.innerHeight;
        lon = parseFloat(@ViewBag.lon);
        lat = parseFloat(@ViewBag.lat);
        var lonPoint = (lon + 180) * ($(window).width() / 360);
        var latPoint = (lat + 90) * ($(window).height() / 180);
        ctx.beginPath();
        ctx.arc(lonPoint, latPoint, 3, 0, 2 * Math.PI);
        ctx.fillStyle = "red";
        ctx.fill();
        ctx.stroke();
        </script>


    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script type="text/javascript" language="JavaScript">
        function set_body_height() { // set body height = window height
            $('body').height($(window).height());
        }
        $(document).ready(function () {
            $(window).bind('resize', set_body_height);
        set_body_height();

    });</script>
</body>
</html>